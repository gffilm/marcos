{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": "./",
    "baseUrl": ".",
    "strict": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],
    "resolveJsonModule": true
  },
  "include": ["**/*.spec.ts", "**/*.test.ts"],  // Include only test files
  "exclude": ["node_modules", "dist", "**/tests/**/*", "./jest.config.ts"]  // Exclude unnecessary directories and files
}
