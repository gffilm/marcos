{
  "compilerOptions": {
    "module": "es6",
    "target": "ES2020",
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDirs": [
      "./api",
      "./frontend"
    ],
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "exclude": ["**/tests/**/*", "./jest.config.ts"]
}